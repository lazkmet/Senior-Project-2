@using VideoShareData.Helpers

<AuthorizeView>
    <Authorized>
        <div class="top-row2 navbar" style="padding-left:10px; padding-right:25%;">
            <div style="display:flex; flex-direction:row; align-items:center;">
                <div style="margin-right:10px">
                    <ProfilePicture UserId=@(ClaimsHelper.getUserID(context)) Height=50 Width=50/>
                </div>
                <div style="display:flex; flex-direction:column; align-items:center;">
                    <a href="/Profile" style="color:black;text-decoration:none;font-size:16px;background-color:#D9D9D9;padding-left:0.5rem;padding-right:0.5rem;padding-top:0;padding-bottom:0;text-overflow:ellipsis;white-space:nowrap;">
                        @(ClaimsHelper.getClaimValue(context, ClaimTypes.Name) ?? "Unnamed User")
                    </a>
                    <div style="font-size:16px;color:#5A5A5A; text-decoration:underline;">
                        @(ClaimsHelper.getClaimValue(context, ClaimTypes.Role) ?? "")
                    </div>
                </div>
            </div>
        </div>

        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <nav class="flex-column">
                <div class="nav-item px-3" style="border-radius: 9px;">
                    <NavLink class="nav-link" style="padding-left:10px;" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                    <NavLink class="nav-link" style="padding-left:10px;" href="/Profile">
                        <span class="oi oi-person" aria-hidden="true"></span> My Profile
                    </NavLink>
                    <AuthorizeView Context="SubContext" Roles="Admin">
                        <Authorized>
                            <NavLink class="nav-link" style="padding-left:10px;" href="/Admin/AllUsers">
                                <span class="oi oi-people" aria-hidden="true"></span> All Users
                            </NavLink>
                            <NavLink class="nav-link" style="padding-left:10px;" href="/Admin/AllCourses">
                                <span class="oi oi-list" aria-hidden="true"></span> All Courses
                            </NavLink>
                        </Authorized>
                    </AuthorizeView>
                    <NavLink class="nav-link" style="padding-left:10px;" href="/Logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Log Out
                    </NavLink>
                </div>
            </nav>
        </div>
        <button title="Navigation menu" class="navbar-toggler" style="position:relative;width:80%;background-color:#e5e5e5;left:20%;margin-bottom:5px;height:20px" @onclick="ToggleNavMenu">
            <span class=@("oi " + NavMenuCollapseIcon) style="color:#969696;"></span>
        </button>
    </Authorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string NavMenuCollapseIcon => collapseNavMenu ? "oi-caret-bottom" : "oi-caret-top";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
